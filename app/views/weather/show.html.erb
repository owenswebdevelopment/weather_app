<nav class="navbar navbar-dark bg-dark p-4">
  <form class="container-fluid justify-content-start">
    <div class="d-flex justify-content-center align-items-center">
      <%= link_to "Go Back", weather_path, class: "btn btn-outline-success me-2", style: "margin-left: 40px;" %>
    </div>
  </form>
</nav>
<div class="container d-flex justify-content-center align-items-center mt-5">
  <div class="card p-4 shadow-lg bg-light text-dark rounded border-0" style="max-width: 500px; background: linear-gradient(to right, #e0f7fa, #ffffff);">
    <div class="card-body">
      <h2 class="card-title text-primary">Weather in <%= @city.capitalize %>:</h2>
      <p class="card-text"><strong>🌡️ Temperature:</strong> <%= @weather["main"]["temp"] %> °C</p>
      <p class="card-text"><strong>⛅ Condition:</strong> <%= @weather["weather"][0]["description"].capitalize %></p>
      <p class="card-text"><strong>💧 Humidity:</strong> <%= @weather["main"]["humidity"] %> %</p>
      <p class="card-text"><strong>🌬️ Feels Like:</strong> <%= @weather["main"]["feels_like"] %> °C</p>
    </div>
  </div>
</div>
